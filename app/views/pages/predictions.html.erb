<body class = "background centered">
	<h1><%= current_user.username %> &nbsp; <i>(Overall: <font color="red"><%= @overall_score[0]%>-<%= @overall_score[1]%></font>)</i></h1>
	<% for week in 1..17 %>
		<%= link_to(week.to_s, '/predictions?week='+week.to_s, {:style=>'font-size: 150%'}) %>
		&nbsp;
	<% end %>
	</br>
	<h3><%= link_to "Standings", '/standings' + '?user=' + @username %></h3>
	<br/>
	<% week = params[:week] %>
	<h2>Week <%= week %></h2>
	<h3><i>Score: <font color="red"><%= @week_score[week.to_i][0] %>-<%= @week_score[week.to_i][1] %></font></i></h3>
	</br>
	<div class = "grid">
		<% for game in @schedule[week.to_s] %>
			<% color = "" %>
			<% if !can_pick(game["gameDate"], game["gameTimeET"]) %>
				<% color = "grey" %>
			<% end %>
			<% if @result[week.to_i].key?((game["gameId"]).to_i) %>
				<% if @result[week.to_i][(game["gameId"]).to_i] == true %>
					<% color = "#53BD62" %>
				<% else %>
					<% color = "#C45057" %>
				<% end %>
			<% end %>
			<div class = "box centered" style="background-color: <%= color %>;">
				<%= image_tag("logos/#{game["awayTeam"]}.png", alt: "#{game["awayTeam"]} logo", id: "#{game["awayTeam"]}", onclick: "click_on_image(id, '#{game["homeTeam"]}', '#{game["gameId"]}', '#{game["gameDate"]}', '#{game["gameTimeET"]}')", onmouseover: "", style: "cursor: pointer", size: "120x70", class: "img-responsive") %> 
				<!--&nbsp;&nbsp;&nbsp;&nbsp;-->
				<%= image_tag("@.png", size: "50x50", class: "img-responsive") %>
				<%= image_tag("logos/#{game["homeTeam"]}.png", alt: "#{game["homeTeam"]} logo", id: "#{game["homeTeam"]}", onclick: "click_on_image(id, '#{game["awayTeam"]}', '#{game["gameId"]}', '#{game["gameDate"]}', '#{game["gameTimeET"]}')", onmouseover: "", style: "cursor: pointer", size: "120x70", class: "img-responsive") %>
				<% if @games_picked.key?(game["gameId"]) %>
					<script type="text/javascript">
						var picked_team = "<%= @games_picked[game["gameId"]] %>"
						var home_team = "<%= game["homeTeam"] %>"
						var away_team = "<%= game["awayTeam"] %>"
						show_picked_team(picked_team, home_team, away_team)
					</script>
				<% end %>
				<br/>
				<% left = left_to_close(game["gameDate"], game["gameTimeET"]) %>
				<% if left < 24*60*60 and left > 30*60 %>
					<% left -= 30*60 %>
					<i><b><font color="red"><%= Time.at(left).utc.strftime("%H:%M:%S") %> left to pick</font></b></i>
				<% end %>
			</div>
			<!-- &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; -->
		<% end %>
	</div>
	</br>
	</br>
</body>